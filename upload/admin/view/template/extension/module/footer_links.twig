{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        {# <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button> #}
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      {% if success %}
        <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
      {% endif %}
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ links_table_title }}</h3>
        </div>
        <div class="panel-body">
          <table class="table table-bordered">
            <thead>
              <tr>
                <td>{{ text_link_href }}</td>
                <td>{{ text_link_text }}</td>
                <td>{{ text_link_status }}</td>
              </tr>
            </thead>
            <tbody>
              {% for link in footer_links %}
                <tr>
                  <td>{{ link.link }}</td>
                  <td>{{ link.text }}</td>
                  <td>
                    {% if link.status %}
                      <span class="label label-success">{{ text_enabled }}</span>
                    {% else %}
                      <span class="label label-danger">{{ text_disabled }}</span>
                    {% endif %}
                  </td>
                  <td>
                    <a href="{{ link.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                    <a href="{{ link.delete }}" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_link_add }}</h3>
      </div>
      <div class="panel-body">
        {% if error_link_href %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_link_href }}
              <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if error_link_text %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_link_text }}
              <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">


            <label class="col-sm-2 control-label" for="link_href">{{ text_link_href }}</label>
            <div class="col-sm-10">
              <input type="text" name="link_href" value="{{ link_href }}" placeholder="{{ link_href }}" id="link_href" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="link_text">{{ text_link_text }}</label>
            <div class="col-sm-10">
              <input type="text" name="link_text" value="{{ link_text }}" placeholder="{{ link_text }}" id="link_text" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="link_status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="link_status" id="link_status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          {# submit button #}
          <div class="form-group">
            <div class="col-sm-10">
              <button type="submit" class="btn btn-primary">{{ button_save }}</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
